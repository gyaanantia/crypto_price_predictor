from flask import Flask
import lstm as lstm

app = Flask(__name__)
predictor = lstm.CryptoCurrencyPricePredictor()

@app.route('/')
def hello_world():
    return 'hello world'

@app.route('/day')
def one_day_prediction():
    predictor.build_and_train_model()
    return str(predictor.predict(1))

@app.route('/week')
def one_week_prediction():
    return predictor.predict(7)

@app.route('/month')
def one_month_prediction():
    return predictor.predict(30)

if __name__ == 'main':
    app.run(debug=True)
